<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @room.category %>
</p>

<p>
  <strong>Size:</strong>
  <%= @room.size %>
</p>

<p>
  <strong>Home:</strong>
  <% @home = Home.find(@room.home_id) %>
  <%= @home.name %>
</p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
<p>
  <h3>Pictures to <%= "#{@room.category}" %></h3>
  <ul style="list-style: none;">
  <% @room.pictures.each do |pic| %>
    <li>
      <%= image_tag pic.source %>
        <% pic.comments.each do |comment| %>
        <ul>
          <li>
            <%= comment.text %><br>
            <% @user = User.find_by(comment.user_id) %>
            <%= "Commenter: #{@user.first_name} #{@user.last_name}" %>
          </li>
          <% end %>
        </ul>
    </li>
  <% end %>
</ul>
</p>
